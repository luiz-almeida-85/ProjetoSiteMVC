@model ProjetoSiteMVC.Departamento

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<selection class="wrapper">
    <div class="row">

        <div class="col-md-12">

            <div class="content-panel" style="padding:20px">
                <h2>Deletar</h2>

                <h3>Tem certeza que deseja deletar ? </h3>
                <div>
                    <h4>Departamento</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Nome)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Deletar" class="btn btn-success" /> |
                            @Html.ActionLink("Voltar para a lista", "Index", null, new { @class = "btn btn-success" })
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</selection>



